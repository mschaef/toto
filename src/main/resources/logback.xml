<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <logger name="com.ectworks.toto">
        <level value="INFO" />
    </logger>

    <logger name="com.ectworks.toto.web.controller">
        <level value="DEBUG" />
    </logger>

    <appender name="LOG-STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <Pattern>%r %-5level %logger{36} - %msg%n</Pattern>
      </encoder>
    </appender>

    <root>
        <level value="ERROR" />
        <appender-ref ref="LOG-STDOUT" />
    </root>

</configuration>